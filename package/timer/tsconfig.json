{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declarationDir": "./types",
    "outDir": "./dist",
    "paths": {
      "@unaffected/timer": ["./source"],
      "@unaffected/timer/*": ["./source/*"],
    },
    "rootDir": "."
  },
  "references": [
    { "path": "../app" }
  ],
  "include": [
    "source/*.json",
    "source/**/*.json",
    "source/*.ts",
    "source/**/*.ts",
    "source/*.tsx",
    "source/**/*.tsx",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
}
