{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declarationDir": "./types",
    "outDir": "./dist",
    "paths": {
      "@unaffected/api": ["./source"],
      "@unaffected/api/*": ["./source/*"],
    },
    "rootDir": ".",
    "types": ["vitest/globals"]
  },
  "references": [
    { "path": "../../package/app" },
    { "path": "../../package/gateway" },
    { "path": "../../package/utility" },
  ],
  "include": [
    "source/*.json",
    "source/**/*.json",
    "source/*.ts",
    "source/**/*.ts",
    "source/*.tsx",
    "source/**/*.tsx",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
}
