{
  "name": "@unaffected/unaffected",
  "version": "0.1.0",
  "keywords": [
    "framework",
    "platform",
    "toolkit",
    "typescript",
    "web"
  ],
  "description": "An all-in-one TypeScript application toolkit, framework, and platform.",
  "scripts": {
    "@unaffected/api": "pnpm -F @unaffected/api",
    "@unaffected/app": "pnpm -F @unaffected/app",
    "@unaffected/command": "pnpm -F @unaffected/command",
    "@unaffected/gateway": "pnpm -F @unaffected/gateway",
    "@unaffected/utility": "pnpm -F @unaffected/utility",
    "build": "sh ./bin/build/index.sh",
    "build:watch": "sh ./bin/build/watch.sh",
    "build:docs": "typedoc",
    "clean": "sh ./bin/clean.sh",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "refresh": "sh ./bin/refresh.sh",
    "start:watch": "pnpm run -r start:watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "author": "Cody Mercer <https://github.com/cklmercer>",
  "license": "MIT",
  "engines": {
    "node": ">=19.3",
    "pnpm": ">=8.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitest/coverage-c8": "^0.30.1",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-vitest": "^0.1.4",
    "tsc-watch": "^6.0.0",
    "typedoc": "^0.24.4",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  }
}
